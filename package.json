{
  "name": "lbundle",
  "version": "0.0.17",
  "description": "Small zero-configuration bundler build on top of Rollup.js and SWC for NPM libraries",
  "source": "./src/index.ts",
  "main": "./dist/lbundle.js",
  "module": "./dist/lbundle.mjs",
  "bin:source": "./src/cli.ts",
  "bin": "./dist/cli.js",
  "types": "./dist/lbundle.d.ts",
  "exports": {
    ".": {
      "default": "./dist/lbundle.js",
      "node": "./dist/lbundle.js",
      "require": "./dist/lbundle.js",
      "import": "./dist/lbundle.mjs",
      "types": "./dist/lbundle.d.ts"
    },
    "./package.json": "./package.json"
  },
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "repository": "AbdUlHamedMaree/lbundle",
  "keywords": [
    "lbundle",
    "bundle",
    "bundler",
    "compile",
    "compiler",
    "compile",
    "compiler",
    "rollup",
    "swc",
    "rust"
  ],
  "files": [
    "dist"
  ],
  "author": "AbdUlHameed Murie (https://github.com/AbdUlHamedMaree)",
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "bun run --bun ./src/cli",
    "prepack": "bun run build",
    "test": "bun test"
  },
  "dependencies": {
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-swc": "^0.3.0",
    "@rollup/plugin-typescript": "^11.1.6",
    "@swc/core": "^1.4.16",
    "commander": "^12.0.0",
    "compare-versions": "^6.1.0",
    "lodash.merge": "^4.6.2",
    "postcss": "^8.4.38",
    "rollup": "^4.14.3",
    "rollup-plugin-dts": "^6.1.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-typescript-paths": "^1.5.0"
  },
  "devDependencies": {
    "@types/bun": "^1.1.0",
    "@types/lodash.merge": "^4.6.9",
    "@types/node": "^20.12.7",
    "@types/rollup-plugin-peer-deps-external": "^2.2.5",
    "@typescript-eslint/eslint-plugin": "^7.7.0",
    "@typescript-eslint/parser": "^7.7.0",
    "core-js": "^3.37.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-unused-imports": "^3.1.0",
    "less": "^4.2.0",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "sass": "^1.75.0",
    "stylus": "^0.63.0",
    "typescript": "^5.4.5"
  },
  "peerDependencies": {
    "core-js": ">=3.0.0",
    "less": ">=4.0.0",
    "sass": ">=1.0.0",
    "stylus": ">=0.50.0"
  },
  "peerDependenciesMeta": {
    "core-js": {
      "optional": true
    },
    "less": {
      "optional": true
    },
    "sass": {
      "optional": true
    },
    "stylus": {
      "optional": true
    }
  }
}
